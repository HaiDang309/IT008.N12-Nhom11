<UserControl x:Class="FastFood.Edit_discount_table.Date_edit_control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FastFood.Edit_discount_table"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Hạn sử dụng"/>

        <Label
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="0,30,0,0"
            Content="Ngày bắt đầu"/>
        <DatePicker x:Name="Begin_picker"
            SelectedDateFormat="Long"
            SelectedDate="2022-10-23"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,30,0,0"/>

        <Label
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="0,70,0,0"
            Content="Ngày kết thúc"/>
        
        <DatePicker x:Name="End_picker"
            SelectedDateFormat="Long"
            SelectedDate="2022-10-23"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,70,0,0"/>
    </Grid>
</UserControl>
